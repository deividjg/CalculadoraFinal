<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.calculadora.MainActivity"
    android:background="@drawable/fondo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:id="@+id/tvPantalla"
            android:textAlignment="viewEnd"
            android:textSize="55sp"
            android:layout_height="65dp"
            android:textColor="@color/verdePerso"
            android:background="@color/semiTransparencia" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="M+"
                android:layout_width="wrap_content"
                android:id="@+id/bMmas"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia" />

            <Button
                android:text="M-"
                android:layout_width="wrap_content"
                android:id="@+id/bMmenos"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia" />

            <Button
                android:text="MR"
                android:layout_width="wrap_content"
                android:id="@+id/bMemoRecall"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia" />

            <Button
                android:text="CM"
                android:layout_width="wrap_content"
                android:id="@+id/bBorrarMemo"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="CE"
                android:layout_width="wrap_content"
                android:id="@+id/bCe"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/naranjaPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
                android:text="C"
                android:layout_width="wrap_content"
                android:id="@+id/bC"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/rojoPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
                android:text="DEL"
                android:layout_width="wrap_content"
                android:id="@+id/bDelete"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/naranjaPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
            android:text="/"
            android:layout_width="wrap_content"
                android:id="@+id/bDividir"
            android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:id="@+id/b7"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:id="@+id/b8"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:id="@+id/b9"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
                android:text="x"
                android:layout_width="wrap_content"
                android:id="@+id/bMulti"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:id="@+id/b4"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="0dp" />

            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:id="@+id/b5"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="0dp" />

            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:id="@+id/b6"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="0dp" />

            <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:id="@+id/bRestar"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:textSize="40sp"
            android:onClick="leeOperador"
            android:textColor="@color/azulPerso"
            android:background="@color/semiTransparencia"
            android:padding="0dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:id="@+id/b1"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:id="@+id/b2"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:id="@+id/b3"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:id="@+id/bSumar"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeOperador"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:id="@+id/b0"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp" />

            <Button
                android:text="."
                android:layout_width="wrap_content"
                android:id="@+id/bComa"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="leeNum"
                android:textColor="@color/azulPerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp"
                android:textStyle="normal|bold" />

            <Button
                android:text="="
                android:layout_width="163dp"
                android:id="@+id/bIgual"
                android:layout_height="65dp"
                android:textSize="40sp"
                android:onClick="resuelve"
                android:width="200dp"
                android:layout_weight="5.84"
                android:textColor="@color/verdePerso"
                android:background="@color/semiTransparencia"
                android:padding="3dp"
                android:textStyle="normal|bold" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
